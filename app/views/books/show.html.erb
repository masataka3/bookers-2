<%=render 'books/list' ,book: @book_new, user: @user %>
<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <table class="table table-striped">
      <h1>Book detail</h1>
        <tbody>
          <tr>
            <td><%=link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, size:'50x50', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
                <br>
                <%= @user.name %>
                <% end %>
            </td>
              <td><%=link_to @book.title,book_path(@book.id) %></td>
              <td><%= @book.body %></td>

              <% if @book.user_id == current_user.id %>
                <td><%=link_to "Edit", edit_book_path, class: "btn btn-success" %></td>
                <td><%=link_to "Destroy", book_path,method: :delete, "data-confirm" => "本当に削除しますか", class: "btn btn-danger" %></td>
              <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
