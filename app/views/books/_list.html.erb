<div class= "body">
  <% if flash[:notice] %>
  <div class="flash"><%= flash[:notice] %></div>
<% end %>
  <div class="col-xs-3" >
    <div>
      <h2>User info</h2>
      <div class="user-edit-image">
        <%= attachment_image_tag user, :profile_image, size:'50x50', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
      </div>
    </div>

    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
    </div>
    <div>
      <h2>New book</h2>
      <%= form_for book do |f|%>
        <p>text</p>
        <%= f.text_field :title, class: "col-xs-12 book_title" %>
        <p>opinion</p>
        <%=f.text_area :body, class: "col-xs-12 book_body" %>

        <%= f.submit "Create Book", class: "btn btn-primary col-xs-12"%>
      <% end %>
    </div>
  </div>
</div>
