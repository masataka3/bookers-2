<%=render 'books/list' ,book: @book_new, user: @user%>
<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <table class="table table-striped">
        <h1>Users</h1>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user|  %>
            <tr>
              <td> <%= attachment_image_tag user, :profile_image, size:'50x50', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
               <td><%= user.name %></td>
               <td><%= link_to "Show", user_path(user) %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

